	<body>
		<!-- ナビバーの設定 -->
		<!-- <nav id="navbar" class="navbar navbar-inverse" role="navigation"> -->
		<nav id="navbar" class="navbar navbar-default" role="navigation">
			<div class="container">
				<ul class="nav navbar-nav">
					<li><a id="simple-menu" href="#sidr"><span class="glyphicon glyphicon-th"></span> menu</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li><a id="loginbtn" href="#login"><a id="simple-menu" href="#sidr"><span class="glyphicon glyphicon-log-in"> login</a></li>
				</ul>
			</div>
		</nav>

		<div id="container">

			<div id="logs">
				<table class="table table-striped" id="logsTable">
				</table>
				<ul id="logsList"></ul>
			</div><!-- #logs -->

			<div id="sidr">
				<!-- Your content -->
				<ul>
					<li id='drawerLogs'><a href="#logs">Logs</a></li>
					<li id='drawerYou'><a href="#you">You</a></li>
					<li id='drawerPayment'><a href="#you">Payment</a></li>
					<li id='drawerDeposit'><a href="#you">Deposit</a></li>

				</ul>
			</div><!-- #sidr -->
			<div id= "user"><!-- ユーザ情報 -->
				<div id="userInfo">
					<div id="userName"></div>
					<div id="userProfile"></div>
					<div id="userLOCA"></div>
					<button id="syncICbtn" class="btn btn-default" type="button">add new nfc device</button>
					<button id="calendarbtn" class="btn btn-default" type="button">show calendar</button>
				</div>
				<div id="calendar">
					<!-- modal window -->
					<div id="auto_modal" class="modal fade">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header">
									<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
									<h4 class="modal-title">金額</h4>
								</div>
								<div class="modal-body text-center">
									<form class="form-inline" role="form">
										<div class="form-group">
											<label class="sr-only" for="chargeLabel">charge</label>
											<input type="number" class="form-control" id="chargeInput" placeholder="Enter price" required min="1">
										</div>
										<button type="button" class="btn btn-primary" id="chargebtn">charge</button>
									</form>
								</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-default" data-dismiss="modal">close</button>
								</div>
							</div><!-- modal content -->
						</div><!-- modal dialog -->
					</div><!-- auto modal -->
				</div><!-- #calendar -->
			</div><!-- #user -->
			<div id="payment">paymentやで</div>
			<div id="deposit">depositやで</div>
			<!-- <input class="btn btn-default" type="button" id="btn" value="hello world!" /> -->
		</div><!-- #container -->

		<div id="login">
			<form action="/login" method="post">
					<div>
							<input type="text" name="username"/>
					</div>
					<div>
							<label>Password:</label>
							<input type="password" name="password"/>
					</div>
					<div>
							<input class="btn btn-primary" type="submit" value="Log In"/>
					</div>
			</form>
		</div><!-- #login -->
